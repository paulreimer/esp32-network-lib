namespace Firmware;

table FileMetadata {
  path:string (key);
  checksum:string;
  url:string;
}

table FirmwareMetadata {
  version:uint (key);
  checksum:string;
  url:string;
  interval:uint = 3600;
  files:[FileMetadata];
}

root_type FirmwareMetadata;
file_identifier "FWUP";
file_extension "fb";
