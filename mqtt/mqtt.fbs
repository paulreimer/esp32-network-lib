  to_pid:UUID.UUID;
  topic:string;
  payload:string;
}
*/

table MQTTMessage {
  topic:string;
  payload:string;
  qos:MQTT_QOS = AtMostOnce;
  retain:bool = false;
}

root_type MQTTClientConfiguration;
file_identifier "mqtt";
file_extension "fb";
