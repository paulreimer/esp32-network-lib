include "uuid.fbs";

namespace ActorModel;

enum SupervisionStrategy:byte
{
  one_for_one,
  one_for_all,
  rest_for_one,
  simple_one_for_one
}

enum ProcessFlag:short
{
  trap_exit
}

table Message
{
  type:string;
  payload:[ubyte];
}

table Ok
{
  _:string;
}

table Error
{
  reason:string;
}

union Result { Ok, Error }

table Signal
{
  from_pid:UUID;
  reason:string;
}

table SupervisorFlags
{
  strategy:SupervisionStrategy = one_for_one;
  intensity:uint;
  period:uint;
}

table ActorExecutionConfig
{
  task_prio:int = 5;
  task_stack_size:uint = 8192;
}

root_type Message;

file_identifier "Act!";
